<%= form_for "receive_email", url: read_email_path, :html => {:multipart =>true, class: "mt-3"}, method: :post do |f| %>
  <%= f.file_field :file, accept: 'eml' %><br>
  <%= f.submit 'Upload Email', class: "btn btn-info mt-2" %>
<% end %>

<div class="float-right mt-4">
<%= link_to 'New Receive Email', new_receive_email_path, class: "btn btn-primary" %>
</div>
<br>
<h1>Receive Emails</h1>

<table id="t-receive-emails" class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Message</th>
      <th>Vehicle</th>
      <th>Price</th>
      <th>Year</th>
      <th>Link vehicle</th>
      <th>Brand vehicle</th>
      <th>Model vehicle</th>
      <th>Kilometer vehicle</th>
      <th>Accessories vehicle</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @receive_emails.each do |receive_email| %>
      <tr>
        <td><%= receive_email.name %></td>
        <td><%= receive_email.phone %></td>
        <td><%= receive_email.message %></td>
        <td><%= receive_email.vehicle %></td>
        <td><%= receive_email.price %></td>
        <td><%= receive_email.year %></td>
        <td><%= receive_email.link_vehicle %></td>
        <td><%= receive_email.brand_vehicle %></td>
        <td><%= receive_email.model_vehicle %></td>
        <td><%= receive_email.kilometer_vehicle %></td>
        <td><%= truncate(receive_email.accessories_vehicle, :length => 17) %></td>
        <td>
          <%= link_to 'Show', receive_email, class: "btn btn-info mb-1" %>
          <%= link_to 'Edit', edit_receive_email_path(receive_email), class: "btn btn-warning mb-1" %>
          <%= link_to 'Destroy', receive_email, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mb-1" %></td>
      </tr>
    <% end %>
  </tbody>

  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Message</th>
      <th>Vehicle</th>
      <th>Price</th>
      <th>Year</th>
      <th>Link vehicle</th>
      <th>Brand vehicle</th>
      <th>Model vehicle</th>
      <th>Kilometer vehicle</th>
      <th>Accessories vehicle</th>
      <th></th>
    </tr>
  </thead>
</table>

