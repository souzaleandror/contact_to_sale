<!DOCTYPE html>
<html>
  <head>
    <title>Contact2Sale</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top mb-5">
    <%= link_to "Contact2Sale", receive_emails_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Emails', root_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>

  <main role="main" class="container mt-5 pt-2">
    <%= yield %>
  </main><!-- /.container -->

  <script>
    $(document).ready(function() {
      // Flash Messages
      $(function () {
        var notice = "<%= flash[:notice] %>"
        $.notify(notice, "success");

        var error = "<%= flash[:error] %>"
        $.notify(error, "error");

        var alerta = "<%= flash[:alert] %>"
        $.notify(alerta, "warn");
      });
    });
  </script>

  </body>
</html>